datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int        @id @default(autoincrement())
  username      String
  email         String     @unique
  passwordHash String
  isVerified    Boolean
  verificationToken String?
  createdAt     DateTime   @default(now())

  times         TimeSlot[]   // ðŸ‘ˆ relation
}

model TimeSlot {
  id        Int      @id @default(autoincrement())
  sport     String
  location  String
  time      DateTime
  duration  Int      // â¬… playing time in minutes

  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}


